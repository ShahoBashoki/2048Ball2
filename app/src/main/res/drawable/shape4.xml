<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/ButtonShadow" />
                </shape>
            </item>
            <item android:bottom="5dp" android:right="5dp">
                <shape>
                    <gradient

                        android:centerColor="@color/HowToPlayAbout2048Ball"
                        android:startColor="@color/HowToPlayAbout2048Ball"
                        android:endColor="@color/HowToPlayAbout2048Ball"

                        />
                    <stroke android:width="1dp" android:color="@color/HowToPlayAbout2048Ball" />
                    <corners android:radius="10dp" />
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <size
                        android:width="270dp"
                        android:height="60dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>